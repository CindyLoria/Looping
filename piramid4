#include<iostream>
using namespace std;
int main()
{
      int n, a, i, j;
      cout << "Masukkan jumlah baris: ";
      cin >> n;
      for (i = 0; i <= n; i++)
      {
            for (a = n; a > i; a--)
                  cout << " ";
            for (a = 0; a < i; a++)
                  cout << "* ";
            cout << "\n";
      }
      for (i = 1; i < n; i++)
      {
            for (a = 0; a < i; a++)
                  cout << " ";
            for (j = n; j > i; j--)
                  cout << "* ";
            
           
      }
      return 0;
}
