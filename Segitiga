#include <iostream>
 
using namespace std;
 
int main()
{
 
  int tinggisegitiga,i,j,k;
 
  cout << "Input tinggi segitiga: ";
  cin >> tinggisegitiga;
 
  cout << endl;
 
  for(i=1; i<=tinggisegitiga; i++) {
 
    for(j=1; j<=tinggisegitiga-i; j++) {
      cout << " ";
    }
 
    for(k=1; k<=i; k++) {
      cout << " *";
    }
    cout << endl;
  }
 
  return 0;
}
